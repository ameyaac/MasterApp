<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationSearch">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/search_reg_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="Registration Number"
                android:paddingStart="20dp"
                android:background="@drawable/fragment_border"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <Button
                android:id="@+id/btn_ssearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search" />

            <EditText
                android:id="@+id/search_reg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:inputType="text"
                android:hint="Name"
                android:paddingStart="20dp"
                android:background="@drawable/fragment_border"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <EditText
                android:id="@+id/search_reg_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Password"
                android:paddingStart="20dp"
                android:background="@drawable/fragment_border"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <EditText
                android:id="@+id/search_reg_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:hint="Date of Birth"
                android:paddingStart="20dp"
                android:background="@drawable/fragment_border"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <EditText
                android:id="@+id/search_reg_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:inputType="textEmailAddress"
                android:hint="E-mail"
                android:paddingStart="20dp"
                android:background="@drawable/fragment_border"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <EditText
                android:id="@+id/search_reg_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:hint="Phone No."
                android:paddingStart="20dp"
                android:background="@drawable/fragment_border"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <Spinner
                android:id="@+id/search_reg_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_border"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>